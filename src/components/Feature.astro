---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<div class="px-4 py-4 my-2 card">
  <div class="flex justify-center mx-auto my-2">
    <img src="/img/icon.png" class="rounded-full mx-auto" />
  </div>
  <h2 class="text-center text-white">
    {title}
  </h2>
  <p class="text-white">
    {body}
  </p>
</div>
<style>
  h2 {
    margin: 0;
    font-size: 1.25rem;
  }

  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  .card {
    background-color: #ffffff26;
    padding: 1rem;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }
</style>
