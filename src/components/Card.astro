---
interface Props {
  title: string;
  body: string;
}

const { title, body } = Astro.props;
---

<div class="px-4 py-4">
  <h2 class="text-center text-white">
    {title}
  </h2>
  <p class="text-white">
    {body}
  </p>
</div>
<style>
  h2 {
    margin: 0;
    font-size: 1.25rem;
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }

  div {
	padding: 1rem;
	border-radius: 0.5rem;
	transition: all 0.2s;
  }

  div:hover {
	background-color: #5528281A;
  }
</style>
